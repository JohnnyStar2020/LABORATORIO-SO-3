type C:\Users\steve\.ssh\llave_rocky.pub | ssh johnny@192.168.0.100 "mkdir -p ~/.ssh && touch ~/.ssh/authorized_keys && chmod 700 ~/.ssh && chmod 600 ~/.ssh/authorized_keys && cat >> ~/.ssh/authorized_keys"
ssh -i C:\Users\steve\.ssh\llave_rocky johnny@192.168.0.100
