Practica 2 LAB 4

sudo dnf install -y postfix mailx cyrus-sasl-lib cyrus-sasl-plain
sudo systemctl enable --now postfix
sudo firewall-cmd --permanent --add-service=smtp
sudo firewall-cmd --reload
sudo tee -a /etc/postfix/main.cf <<EOF
relayhost = [smtp.gmail.com]:587
smtp_sasl_auth_enable = yes
smtp_sasl_security_options = noanonymous
smtp_sasl_password_maps = lmdb:/etc/postfix/sasl_passwd
smtp_use_tls = yes
smtp_tls_security_level = encrypt
smtp_tls_CAfile = /etc/ssl/certs/ca-bundle.crt
inet_protocols = ipv4
EOF
echo "[smtp.gmail.com]:587 johnstevenestrellabatista@gmail.com:[TuContraseñaDeAplicacion]" | sudo tee /etc/postfix/sasl_passwd
sudo postmap /etc/postfix/sasl_passwd
sudo chmod 0600 /etc/postfix/sasl_passwd /etc/postfix/sasl_passwd.lmdb
sudo systemctl restart postfix
echo -e "[Tu Nombre Completo]\n[Tu Matrícula]\n[Tu Nombre Completo]\n[Tu Matrícula]\n[Tu Nombre Completo]\n[Tu Matrícula]" | mail -s "MambruSeFueALaGuerra" os3conadrian@gmail.com
sudo postqueue -f
